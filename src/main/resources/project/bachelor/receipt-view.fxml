<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1000" prefWidth="1080" styleClass="root" stylesheets="@app-style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.bachelor.controllers.ReceiptController">



    <!-- Заголовок -->
    <Label fx:id="menuLabel" layoutX="395.0" layoutY="44.0" styleClass="section-title" text="Надходження" />

    <!-- Кнопки -->
    <Button fx:id="addButton" layoutX="22.0" layoutY="587.0" onAction="#onAddClicked" styleClass="menu-button" text="Додати товари у склад" textAlignment="CENTER" />
    <Button fx:id="deleteButton" layoutX="22.0" layoutY="698.0" onAction="#onDeleteClicked" styleClass="menu-button" text="Видалити" />
    <Button fx:id="toMenuButton" layoutX="22.0" layoutY="806.0" onAction="#onToMenuClicked" styleClass="menu-button" text="Головне Меню" />
    <TableView layoutX="344.0" layoutY="131.0" prefHeight="715.0" prefWidth="723.0" styleClass="table-view">
        <columns>
            <TableColumn prefWidth="50.0" text="N" />
            <TableColumn prefWidth="209.0" text="Категорія" />
            <TableColumn prefWidth="325.0" text="Назва" />
            <TableColumn prefWidth="135.0" text="Кількіть на складі" />
        </columns>
    </TableView>
    <TextField fx:id="numberField" layoutX="22.0" layoutY="283.0" prefHeight="62.0" prefWidth="300.0" styleClass="text-field" text="Введіть кількість" />
    <TextField fx:id="nameField" layoutX="22.0" layoutY="208.0" prefHeight="62.0" prefWidth="300.0" styleClass="text-field" text="Введіть назву товару " />
    <ComboBox fx:id="categoryField" layoutX="22.0" layoutY="131.0" prefHeight="62.0" prefWidth="300.0" promptText="Оберіть категорію" />
   <TextField fx:id="priceField" layoutX="22.0" layoutY="359.0" prefHeight="62.0" prefWidth="300.0" styleClass="text-field" text="Введіть ціну закупки" />
   <TextField fx:id="marginField" layoutX="22.0" layoutY="438.0" prefHeight="62.0" prefWidth="300.0" styleClass="text-field" text="Введіть відсоток націнки" />

</AnchorPane>
